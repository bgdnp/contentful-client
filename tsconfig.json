{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es2017"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/**/*"],
  "exclude": ["node_modules", "__mocks__", "**/*.spec.ts", "**/*.test.ts"],
  "types": ["typePatches"]
}
